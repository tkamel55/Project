<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    android:background="#fcfcfc"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayoutCategory"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:layout_margin="10dp"
        android:id="@+id/tvCategory"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:minWidth="150dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 Videos"
        android:textColor="#787878"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tvNumber"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:minWidth="150dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="end"
        >
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="8dp"
            android:text="Edit Category's Name"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@android:color/black"

            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="8dp"
            android:text="Delete Category"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="end"
            />

    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>
